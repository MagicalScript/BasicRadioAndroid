<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.clickgostudio.air1072.fragments.ThreeFragment">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
    android:weightSum="1">

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="138dp"
      android:paddingTop="5sp">

      <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/radio_logo"
        android:id="@+id/imageView" />
    </FrameLayout>

    <Space
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="0.08" />

    <TextView
      android:text="Islamic Radio Stations"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/textView7"
      android:textColor="@color/common_google_signin_btn_text_dark_focused"
      android:gravity="center_horizontal"
      android:textSize="36sp" />

    <Space
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="0.17" />

    <TextView
      android:text="version 2.0.0"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/textView8"
      android:textColor="@color/common_google_signin_btn_text_dark_focused"
      android:gravity="center_horizontal" />

    <Space
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="0.04" />

    <TextView
      android:text="Z-TECHNOLOGIES"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/textView9"
      android:textColor="@color/common_google_signin_btn_text_dark_focused"
      android:gravity="center_horizontal"
      android:textSize="18sp" />

    <Space
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="0.17" />

    <TextView
      android:text="By ZAMRANI Yassine Â© 2017 zemraniyassine2@gmail.com"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/textView10"
      android:textColor="@color/common_google_signin_btn_text_dark_focused"
      android:gravity="center_horizontal" />
  </LinearLayout>
</RelativeLayout>
